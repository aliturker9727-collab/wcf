{
  "compilerOptions": {
    "target": "ES2017",
    "baseUrl": "./src",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "paths": {
      "@/*": ["*"],
      "*": ["node_modules/*"]
    },
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ],
    "strictNullChecks": true,
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "isolatedModules": true
  },
  "include": [
    "src/**/*"
  ]
}
